<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:gravity="center"
    android:padding="24dp">

    <!-- Success Icon -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_success_check"
        android:background="@drawable/circle_success_background"
        android:layout_marginBottom="32dp" />

    <!-- Success Message -->
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt hàng thành công!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/success_color"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cảm ơn bạn đã tin tưởng và đặt hàng tại PhoneShop"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Order Information Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textOrderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mã đơn hàng: ORD_123456789"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:layout_marginBottom="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textTotalAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng tiền: ₫55,010,000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textEstimatedDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dự kiến giao hàng: 22/10/2024"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:drawableStart="@drawable/ic_schedule"
                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xem Đơn Hàng"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:backgroundTint="@color/primary_color"
            app:cornerRadius="8dp"
            android:layout_marginBottom="12dp"
            android:paddingVertical="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinueShopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiếp Tục Mua Sắm"
            android:textColor="@color/primary_color"
            android:textSize="16sp"
            app:backgroundTint="@android:color/transparent"
            app:strokeColor="@color/primary_color"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            android:paddingVertical="12dp" />

    </LinearLayout>

</LinearLayout>