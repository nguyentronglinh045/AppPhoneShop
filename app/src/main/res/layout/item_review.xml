<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:gravity="top"
    android:background="@android:color/white">

        <!-- Avatar -->
        <ImageView
            android:id="@+id/imageAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_avatar_placeholder"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:layout_marginEnd="12dp"
            android:elevation="1dp" />

        <!-- Review Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- User Name -->
            <TextView
                android:id="@+id/textUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#212121"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="nguyentronglinh045" />

            <!-- Star Rating Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <!-- Star Rating -->
                <LinearLayout
                    android:id="@+id/layoutStars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:id="@+id/star1"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="2dp"
                        android:src="@drawable/ic_star_filled"
                        android:contentDescription="Star 1" />
                    <ImageView
                        android:id="@+id/star2"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="2dp"
                        android:src="@drawable/ic_star_filled"
                        android:contentDescription="Star 2" />
                    <ImageView
                        android:id="@+id/star3"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="2dp"
                        android:src="@drawable/ic_star_filled"
                        android:contentDescription="Star 3" />
                    <ImageView
                        android:id="@+id/star4"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="2dp"
                        android:src="@drawable/ic_star_filled"
                        android:contentDescription="Star 4" />
                    <ImageView
                        android:id="@+id/star5"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_star_empty"
                        android:contentDescription="Star 5" />
                </LinearLayout>

                <!-- Date -->
                <TextView
                    android:id="@+id/textReviewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#757575"
                    android:textSize="13sp"
                    tools:text="05/11/2025" />
            </LinearLayout>

            <!-- Variant Info with Icon -->
            <LinearLayout
                android:id="@+id/layoutVariantInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã mua:"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/textVariantInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#424242"
                    android:textStyle="italic"
                    tools:text="Sunset Orange, 12GB RAM, 1TB" />
            </LinearLayout>

            <!-- Verified Purchase Badge -->
            <LinearLayout
                android:id="@+id/layoutVerifiedBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_verified_badge"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="6dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_check_circle"
                    android:layout_marginEnd="4dp"
                    app:tint="#4CAF50"
                    android:contentDescription="Verified" />

                <TextView
                    android:id="@+id/textVerified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã mua hàng"
                    android:textSize="11sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Comment -->
            <TextView
                android:id="@+id/textComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#424242"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:layout_marginTop="10dp"
                tools:text="Hai long voi san pham" />
        </LinearLayout>
</LinearLayout>
