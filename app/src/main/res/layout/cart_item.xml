<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/imageCartProduct"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:background="#F5F5F5"
            android:src="@drawable/ic_image_placeholder" />

        <!-- Product Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Product Name -->
            <TextView
                android:id="@+id/textCartProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="iPhone 15 Pro"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="4dp" />

            <!-- Variant Info (Color + Storage) -->
            <LinearLayout
                android:id="@+id/layoutVariantInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:visibility="gone">

                <!-- Color indicator circle -->
                <View
                    android:id="@+id/viewVariantColorIndicator"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/variant_color_circle"
                    android:layout_marginEnd="6dp" />

                <!-- Variant text -->
                <TextView
                    android:id="@+id/textCartVariantInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deep Purple 128GB"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Product Category -->
            <TextView
                android:id="@+id/textCartProductCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="iPhone"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/detail_chip_bg"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginBottom="8dp" />

            <!-- Price and Quantity Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Unit Price -->
                <TextView
                    android:id="@+id/textCartProductPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$999"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary" />

                <!-- Quantity Controls -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCartMinus"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:minWidth="0dp"
                        android:padding="0dp"
                        android:text="-"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textCartQuantity"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCartPlus"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:minWidth="0dp"
                        android:padding="0dp"
                        android:text="+"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Total Price and Remove -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/textCartTotalPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tổng: $999"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCartRemove"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Xóa"
                    android:textColor="#F44336"
                    android:textSize="12sp"
                    android:minWidth="0dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>