<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/imageProduct"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:background="@drawable/image_background"
        android:src="@drawable/ic_phone_placeholder" />

    <!-- Product Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <!-- Product Name -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="iPhone 15 Pro Max 256GB"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="4dp" />

        <!-- Variant Info (Color + Storage) -->
        <LinearLayout
            android:id="@+id/layoutVariantInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:visibility="gone">

            <!-- Color indicator circle -->
            <View
                android:id="@+id/viewVariantColorIndicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/variant_color_circle"
                android:layout_marginEnd="6dp" />

            <!-- Variant text -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textVariantInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deep Purple 128GB"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <!-- Price -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₫29,990,000"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="4dp" />

        <!-- Quantity -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng: 1"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="8dp" />

        <!-- Total Price -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₫29,990,000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color" />

    </LinearLayout>

</LinearLayout>