<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.phoneshopapp.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_categories"
        android:name="com.example.phoneshopapp.ui.dashboard.DashboardFragment"
        android:label="Categories"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.example.phoneshopapp.ui.notifications.NotificationsFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_notifications" />
        
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.phoneshopapp.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    
    <fragment
        android:id="@+id/navigation_admin"
        android:name="com.example.phoneshopapp.ui.admin.AdminFragment"
        android:label="Admin"
        tools:layout="@layout/fragment_admin" />
</navigation>